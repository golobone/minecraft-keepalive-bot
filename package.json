{
  "name": "minecraft-keepalive-bot",
  "version": "2.0.0",
  "description": "Bot de Minecraft con Aternos y notificaciones Discord. Mantiene servidores de Aternos activos y env√≠a notificaciones de estado.",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "node bot.js",
    "launcher": "node launcher.js",
    "build": "pkg launcher.js -o MCBotApp --compress Brotli",
    "build:windows": "pkg launcher.js -t win-x64 -o MCBotApp.exe --compress Brotli",
    "build:mac": "pkg launcher.js -t macos-x64 -o MCBotApp --compress Brotli",
    "build:linux": "pkg launcher.js -t linux-x64 -o MCBotApp --compress Brotli"
  },
  "pkg": {
    "scripts": ["bot.js", "launcher.js"],
    "assets": [".env", "src/**/*", "package.json"]
  },
  "keywords": ["minecraft", "bot", "keepalive", "aternos", "discord"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "mineflayer": "^4.20.1"
  }
}
